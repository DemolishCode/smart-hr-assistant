# Database Configuration
# Format: postgresql+psycopg2://user:password@host:port/dbname
DATABASE_URL=postgresql+psycopg2://postgres:password@localhost:5432/smart_hr_db

# Security & Authentication
SECRET_KEY=change_this_to_a_secure_random_string_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Initial Superuser (Optional, for seeding)
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin_password

# External AI Services (Required for Resume Parsing & RAG)
# Example: OpenAI, Anthropic, or Local LLM URL
OPENAI_API_KEY=sk-placeholder
