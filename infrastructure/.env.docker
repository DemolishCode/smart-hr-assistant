# Database Configuration for Docker
# Uses Docker service name 'db' instead of localhost
DATABASE_URL=postgresql+psycopg2://admin:1234@db:5432/hr_db

# Security & Authentication
SECRET_KEY=change_this_to_a_secure_random_string_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Initial Superuser (Optional, for seeding)
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=1234

# External AI Services
OLLAMA_BASE_URL=http://host.docker.internal:11434

LLM_MODEL_NAME=llama3
EMBEDDING_MODEL_NAME=nomic-embed-text

# File Storage
UPLOAD_DIR=uploads/
